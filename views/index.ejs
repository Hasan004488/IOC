<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Threat Intelligence Center</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, sans-serif;
      }

      /* Custom animation for results appearing */
      @keyframes slideIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .result-animation {
        animation: slideIn 0.5s ease-out;
      }
    </style>
  </head>

  <body class="bg-light">
    <% if (!scanResult) { %>
    <div
      class="min-vh-100 d-flex flex-column justify-content-center align-items-center px-3"
    >
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8 col-xl-7">
            <div class="text-center mb-5">
              <div class="mb-4">
                <i
                  class="bi bi-shield-check text-primary"
                  style="font-size: 4rem"
                ></i>
              </div>
              <h1 class="display-5 fw-bold text-dark mb-3">
                Threat Intelligence Center
              </h1>
              <p class="text-muted fs-5">
                On-demand IOC Scanning and Monitoring
              </p>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
              <div class="card-body p-4">
                <form action="/scan" method="POST" id="scanForm">
                  <div class="input-group input-group-lg">
                    <span class="input-group-text bg-white border-end-0">
                      <i class="bi bi-search text-muted"></i>
                    </span>
                    <input
                      type="text"
                      name="indicator"
                      id="indicatorInput"
                      class="form-control border-start-0 ps-0"
                      placeholder="Enter IP, Domain, SHA256, or MD5 hash..."
                      required
                      autofocus
                    />
                    <button class="btn btn-primary px-4" type="submit">
                      Scan Now
                    </button>
                  </div>
                  <div
                    id="validationError"
                    class="text-danger mt-2 small d-none"
                  ></div>
                </form>

                <div class="mt-3">
                  <small class="text-muted">Examples:</small>
                  <div class="d-flex flex-wrap gap-2 mt-2">
                    <span
                      class="badge bg-secondary-subtle text-secondary"
                      style="cursor: pointer"
                      ><i class="bi bi-geo-alt me-1"></i>192.168.1.1</span
                    >
                    <span
                      class="badge bg-secondary-subtle text-secondary"
                      style="cursor: pointer"
                      ><i class="bi bi-globe me-1"></i>example.com</span
                    >
                    <span
                      class="badge bg-secondary-subtle text-secondary"
                      style="cursor: pointer"
                      ><i class="bi bi-hash me-1"></i
                      >d2ca3fd0b44c2e54b7c1cc9809...</span
                    >
                  </div>
                </div>
              </div>
            </div>

            <div class="text-center mt-5">
              <div
                class="d-inline-flex align-items-center bg-white rounded-pill px-4 py-2 shadow-sm"
              >
                <i class="bi bi-database-fill text-primary me-3"></i>
                <small class="text-muted">
                  <% if (dashboardStats) { %>
                  <strong
                    >IPs:</strong
                  >
                  <%= (dashboardStats.ip?.total || 0).toLocaleString() %> |
                  <strong
                    >Domains:</strong
                  >
                  <%= (dashboardStats.domain?.total || 0).toLocaleString() %> |
                  <strong
                    >Hostnames:</strong
                  >
                  <%= (dashboardStats.hostname?.total || 0).toLocaleString() %>
                  |
                  <strong
                    >SHA256:</strong
                  >
                  <%= (dashboardStats.sha256?.total || 0).toLocaleString() %> |
                  <strong>MD5:</strong>
                  <%= (dashboardStats.md5?.total || 0).toLocaleString() %> <% }
                  else { %> Loading threat feeds... <% } %>
                </small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% } else { %>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">
          <i class="bi bi-shield-check text-primary me-2"></i>Threat Intel
        </a>
        <div class="col-lg-6 col-md-8">
          <form action="/scan" method="POST" id="scanFormSidebar" class="w-100">
            <div class="input-group">
              <input
                type="text"
                name="indicator"
                id="indicatorInputSidebar"
                class="form-control"
                placeholder="Scan another indicator..."
                value="<%= scanResult.indicator %>"
                required
              />
              <button class="btn btn-primary" type="submit">
                <i class="bi bi-search"></i>
              </button>
            </div>
            <div
              id="validationErrorSidebar"
              class="text-danger mt-2 small d-none"
            ></div>
          </form>
        </div>
      </div>
    </nav>

    <div class="container py-5">
      <div class="col-lg-10 mx-auto">
        <div class="mb-4 result-animation">
          <div class="d-flex align-items-center justify-content-between">
            <div>
              <h4 class="mb-1">Scan Results</h4>
              <p class="text-muted mb-0">
                Indicator:
                <code class="text-dark"><%= scanResult.indicator %></code>
              </p>
            </div>
            <div>
              <button class="btn btn-outline-secondary btn-sm me-2">
                <i class="bi bi-download me-1"></i> Export
              </button>
              <button class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-share me-1"></i> Share
              </button>
            </div>
          </div>
        </div>

        <div
          class="accordion shadow-lg rounded-4 result-animation"
          id="scanResultAccordion"
        >
          <div class="accordion-item rounded-4 border-0">
            <h2 class="accordion-header" id="headingOne">
              <button
                class="accordion-button fs-5 fw-bold p-4"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapseOne"
                aria-expanded="true"
                aria-controls="collapseOne"
              >
                <i class="bi bi-file-earmark-text me-3"></i>
                Detailed Report
              </button>
            </h2>
            <div
              id="collapseOne"
              class="accordion-collapse collapse show"
              aria-labelledby="headingOne"
              data-bs-parent="#scanResultAccordion"
            >
              <div class="accordion-body p-4">
                <% if (scanResult.source === 'Local Database') { %>
                <div
                  class="alert alert-danger d-flex align-items-center mb-4"
                  role="alert"
                >
                  <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                  <div>
                    <h5 class="alert-heading mb-1">
                      Threat Detected in Local Database
                    </h5>
                    <p class="mb-0">
                      This indicator has been flagged as malicious in our
                      threat intelligence feeds.
                    </p>
                  </div>
                </div>

                <div class="row g-3">
                  <% scanResult.data.forEach((attr, index) => { %>
                  <div class="col-12">
                    <div class="card border-0 shadow-sm">
                      <div
                        class="card-header bg-white border-bottom-0 pt-3 pb-0"
                      >
                        <div
                          class="d-flex align-items-center justify-content-between"
                        >
                          <h6 class="mb-0">
                            <span class="badge bg-danger me-2"
                              ><i class="bi bi-bookmark-fill me-1"></i>Event #<%=
                              attr.event_id %></span
                            >
                            <%= attr.Event.Orgc.name %>
                          </h6>
                          <small class="text-muted">
                            <i class="bi bi-calendar3 me-1"></i>
                            <%= new Date(attr.timestamp *
                            1000).toLocaleString() %>
                          </small>
                        </div>
                      </div>
                      <div class="card-body">
                        <div class="row g-3">
                          <div class="col-md-6">
                            <dl class="row mb-0">
                              <dt class="col-sm-4 text-muted small">
                                <i class="bi bi-tag-fill me-1"></i>Category
                              </dt>
                              <dd class="col-sm-8"><%= attr.category %></dd>

                              <dt class="col-sm-4 text-muted small">
                                <i class="bi bi-box-seam me-1"></i>Type
                              </dt>
                              <dd class="col-sm-8"><%= attr.type %></dd>

                              <dt class="col-sm-4 text-muted small">
                                <i class="bi bi-info-circle-fill me-1"></i>Event
                                Info
                              </dt>
                              <dd class="col-sm-8"><%= attr.Event.info %></dd>
                            </dl>
                          </div>
                          <div class="col-md-6">
                            <% if(attr.comment) { %>
                            <div class="mb-3">
                              <small class="text-muted d-block mb-1"
                                ><i class="bi bi-chat-left-text-fill me-1"></i
                                >Comment</small
                              >
                              <p class="mb-0 small"><%= attr.comment %></p>
                            </div>
                            <% } %> <% if(attr.Tag && attr.Tag.length > 0) { %>
                            <div>
                              <small class="text-muted d-block mb-2"
                                ><i class="bi bi-tags-fill me-1"></i>Tags</small
                              >
                              <div class="d-flex flex-wrap gap-1">
                                <% attr.Tag.forEach(tag => { %>
                                <span
                                  class="badge bg-primary-subtle text-primary small"
                                  ><%= tag.name %></span
                                >
                                <% }) %>
                              </div>
                            </div>
                            <% } %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% }) %>
                </div>

                <% } else if (scanResult.source === 'Local Threat Feed') { %>
                <div
                  class="alert alert-warning d-flex align-items-center mb-4"
                  role="alert"
                >
                  <i class="bi bi-exclamation-triangle fs-4 me-3"></i>
                  <div>
                    <h5 class="alert-heading mb-1">
                      Threat Detected in Local Feeds
                    </h5>
                    <p class="mb-0">
                      This indicator was found in local threat intelligence
                      database.
                    </p>
                  </div>
                </div>

                <div class="card border-0 shadow-sm">
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-md-6">
                        <dl class="row mb-0">
                          <dt class="col-sm-4 text-muted small">
                            <i class="bi bi-person-fill me-1"></i>Indicator
                          </dt>
                          <dd class="col-sm-8">
                            <code><%= scanResult.data.indicator %></code>
                          </dd>

                          <dt class="col-sm-4 text-muted small">
                            <i class="bi bi-box-seam me-1"></i>Type
                          </dt>
                          <dd class="col-sm-8"><%= scanResult.data.type %></dd>
                        </dl>
                      </div>
                      <div class="col-md-6">
                        <dl class="row mb-0">
                          <dt class="col-sm-4 text-muted small">
                            <i class="bi bi-calendar-check me-1"></i>First Seen
                          </dt>
                          <dd class="col-sm-8">
                            <%= new
                            Date(scanResult.data.firstSeen).toLocaleString() %>
                          </dd>

                          <dt class="col-sm-4 text-muted small">
                            <i class="bi bi-calendar-plus me-1"></i>Last
                            Updated
                          </dt>
                          <dd class="col-sm-8">
                            <%= new
                            Date(scanResult.data.lastUpdated).toLocaleString()
                            %>
                          </dd>
                        </dl>
                      </div>
                    </div>
                  </div>
                </div>

                <% } else if (scanResult.source === 'Invalid') { %>
                <div
                  class="alert alert-warning d-flex align-items-center"
                  role="alert"
                >
                  <i class="bi bi-exclamation-circle fs-4 me-3"></i>
                  <div>
                    <h5 class="alert-heading mb-1">
                      Invalid Indicator Format
                    </h5>
                    <p class="mb-0"><%= scanResult.data.message %></p>
                  </div>
                </div>

                <% } else { %>
                <div
                  class="alert alert-success d-flex align-items-center"
                  role="alert"
                >
                  <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                  <div>
                    <h5 class="alert-heading mb-1">No Threats Detected</h5>
                    <p class="mb-0">
                      The indicator <code><%= scanResult.indicator %></code> was
                      not found in any threat intelligence databases.
                    </p>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>

    <div
      id="loader"
      class="position-fixed top-0 start-0 w-100 h-100 d-none"
      style="background: rgba(255, 255, 255, 0.9); z-index: 9999"
    >
      <div
        class="d-flex flex-column justify-content-center align-items-center h-100"
      >
        <div
          class="spinner-border text-primary mb-3"
          style="width: 3rem; height: 3rem"
          role="status"
        >
          <span class="visually-hidden">Loading...</span>
        </div>
        <p class="text-muted">Analyzing threat intelligence databases...</p>
      </div>
    </div>

    <script>
      // Validation function
      function isValidIndicator(indicator) {
        const ipRegex =
          /^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$|^([0-9a-fA-F]{1,4}:){7}[0-9a-fA-F]{1,4}$/;
        const sha256Regex = /^[a-fA-F0-9]{64}$/;
        const md5Regex = /^[a-fA-F0-9]{32}$/;
        const hostnameRegex =
          /^[a-zA-Z0-9]([a-zA-Z0-9\-]{0,61}[a-zA-Z0-9])?(\.[a-zA-Z0-9]([a-zA-Z0-9\-]{0,61}[a-zA-Z0-9])?)*$/;

        return (
          ipRegex.test(indicator) ||
          sha256Regex.test(indicator) ||
          md5Regex.test(indicator) ||
          hostnameRegex.test(indicator)
        );
      }

      // Setup form validation for main form
      const scanForm = document.getElementById("scanForm");
      if (scanForm) {
        const indicatorInput = document.getElementById("indicatorInput");
        const validationError = document.getElementById("validationError");
        const loader = document.getElementById("loader");

        scanForm.addEventListener("submit", function (event) {
          const indicatorValue = indicatorInput.value.trim();

          if (indicatorValue && !isValidIndicator(indicatorValue)) {
            event.preventDefault();
            validationError.innerHTML =
              '<i class="bi bi-exclamation-circle me-1"></i>Invalid format. Please use a valid IP, Domain, SHA256, or MD5 hash.';
            validationError.classList.remove("d-none");
            indicatorInput.classList.add("is-invalid");
          } else {
            validationError.classList.add("d-none");
            indicatorInput.classList.remove("is-invalid");
            if (indicatorValue) {
              loader.classList.remove("d-none");
            }
          }
        });

        indicatorInput.addEventListener("input", function () {
          if (this.classList.contains("is-invalid")) {
            this.classList.remove("is-invalid");
            validationError.classList.add("d-none");
          }
        });

        // Example badges click handler
        document
          .querySelectorAll('.badge[style="cursor: pointer"]')
          .forEach((badge) => {
            badge.addEventListener("click", function () {
              indicatorInput.value = this.textContent;
              indicatorInput.focus();
            });
          });
      }

      // Setup form validation for sidebar form
      const scanFormSidebar = document.getElementById("scanFormSidebar");
      if (scanFormSidebar) {
        const indicatorInputSidebar = document.getElementById(
          "indicatorInputSidebar"
        );
        const validationErrorSidebar = document.getElementById(
          "validationErrorSidebar"
        );
        const loader = document.getElementById("loader");

        scanFormSidebar.addEventListener("submit", function (event) {
          const indicatorValue = indicatorInputSidebar.value.trim();

          if (indicatorValue && !isValidIndicator(indicatorValue)) {
            event.preventDefault();
            validationErrorSidebar.innerHTML =
              '<i class="bi bi-exclamation-circle me-1"></i>Invalid format';
            validationErrorSidebar.classList.remove("d-none");
            indicatorInputSidebar.classList.add("is-invalid");
          } else {
            validationErrorSidebar.classList.add("d-none");
            indicatorInputSidebar.classList.remove("is-invalid");
            if (indicatorValue) {
              loader.classList.remove("d-none");
            }
          }
        });

        indicatorInputSidebar.addEventListener("input", function () {
          if (this.classList.contains("is-invalid")) {
            this.classList.remove("is-invalid");
            validationErrorSidebar.classList.add("d-none");
          }
        });
      }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>